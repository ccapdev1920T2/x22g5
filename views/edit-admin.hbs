<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>DLSU Arrows Express Line 1 Reservation - Edit Reservations</title>

    <link rel="stylesheet" type="text/css" media="all" href="assets/css/stylesheet.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Mono&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
    <script src="https://kit.fontawesome.com/a2bb66671d.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  
  </head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-sm sticky-top navbar-dark" style="background-color: #00703c;">
      <!-- <a class="navbar-brand" href="#"><img src="assets/dlsu.png" width="180"></a> -->
      <a class="navbar-brand" href="home-admin"><img src="assets/img/weblogo-white.png" width="100"></a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin?firstname={{firstname}}&username={{username}}">Home</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/reserveAdmin?firstname={{firstname}}&username={{username}}">Reserve</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/editAdmin?firstname={{firstname}}&username={{username}}">Edit<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profileAdmin?firstname={{firstname}}&username={{username}}">Profile</a>
          </li>
        </ul>
        <ul class="navbar-nav navbar-right">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-bars fa-lg" style="color: white;"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Settings</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/">Logout</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container text-center p-4">
      <img src="assets/img/edit-reservations.png" width="500">
    </div>

    <div class="container pt-2 pb-3">
      <div class="row">
        <div class="col">
          <div class="edit-panel">
            <form class="pt-4 pl-3 pr-3 pb-2" method="post">
              <div class="form-row">
                <div class="col">
                </div>
                <div class="col">
                
                  <div class="input-group mb-3">
                    <input type="text" class="form-control" name= "usernamesearch" placeholder="Search...">
                    <div class="input-group-append" style="cursor: pointer;">
                      <span class="input-group-text"><button type="submit" class="fas fa-search"></button></span>
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <div class="reservations-line"></div>
            <div class="container pb-2 text-justify">
              <div class="row">
                <div class="col">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>USERNAME</th>
                        <th>DESTINATION</th>
                        <th>DATE</th>
                        <th>TIME</th>
                        <th>STATUS</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      {{# each infos}}
                      <tr class="info">
                        <td>{{this.username}}</td>
                        <td><input type="text" value="{{this.location}}"  class="location"name="location" size="10"></td>
                        <td><input type="text" value="{{this.date}}" class="date" name="date" size="10"></td>
                        <td><input type="text" value="{{this.time}}" class="time" name="time" size="10"></td>
                        <td><input type="text" value="{{this.status}}"  class="status" name="status" size="10"></td>
                         <td class="id" style="display: none;">{{this._id}}</td>
                        <td class="pointer"><i class="far fa-edit"></i></td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>

    <script type ="text/javascript">
     
        $('tbody').on('click','i',function(){
        var id= $(this).parent().parent().find('.id').text();
        var status= $(this).parent().parent().find('.status').val();
         var time= $(this).parent().parent().find('.time').val();
         var date= $(this).parent().parent().find('.date').val();
         var location= $(this).parent().parent().find('.location').val();
          alert('You have successfully updated.');
        $.get('/editReservations',{id: id, status: status, time:time, date:date,location:location}, function(flag){

        
     });
     
    });

    </script>

</body>
</html>